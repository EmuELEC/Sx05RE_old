---
 CMakeLists.txt |  2 ++
 src/Main.cpp   | 28 +++-------------------------
 2 files changed, 5 insertions(+), 25 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index 77bcb6e..d73d069 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -13,6 +13,8 @@ find_package(GLEW REQUIRED)
 find_package(ProjectM REQUIRED)
 
