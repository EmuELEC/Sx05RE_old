# RetroArch load BIOS
BIOS_DIR="/storage/roms/bios"
N64_DIR="/storage/roms/n64"

# ping site

#ping_site () {
#  IS_SITE="false"
#  ping -4 -c 1 -W 1 alexelec.in.ua > /dev/null 2>&1
#  [ $? -eq 0 ] && IS_SITE="true"
#  echo $IS_SITE
#}

# RetroArch load BIOS
load_bios () {
  if [ ! -f "$BIOS_DIR/received.bios" ]; then
    mkdir -p $BIOS_DIR
    touch $BIOS_DIR/received.bios
     touch $BIOS_DIR/putbioshere
  fi
}

# load Games
load_games () {

    mkdir -p $N64_DIR
if [ ! -f "$N64_DIR/dummy.z64" ]; then
    touch $N64_DIR/dummy.z64
fi
}



load_bios
load_games

exit 0
